local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local ScrollFrame = Instance.new("ScrollingFrame")
local NoteText = Instance.new("TextLabel")
local UIStroke = Instance.new("UIStroke")
local UICorner = Instance.new("UICorner")
local CloseButton = Instance.new("TextButton")

-- Parent
ScreenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "PatchedGui"
ScreenGui.ResetOnSpawn = false

-- Main Frame
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 20, 10)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.25, 0, 0.2, 0)
MainFrame.Size = UDim2.new(0, 300, 0, 250)

UICorner.CornerRadius = UDim.new(0, 8)
UICorner.Parent = MainFrame

UIStroke.Parent = MainFrame
UIStroke.Color = Color3.fromRGB(212, 175, 55)
UIStroke.Thickness = 2

-- Title
Title.Name = "Title"
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0, 5)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Font = Enum.Font.GothamBold
Title.Text = "Note"
Title.TextColor3 = Color3.fromRGB(255, 215, 0)
Title.TextScaled = true

-- Scroll Frame
ScrollFrame.Name = "ScrollFrame"
ScrollFrame.Parent = MainFrame
ScrollFrame.Active = true
ScrollFrame.BackgroundColor3 = Color3.fromRGB(20, 15, 5)
ScrollFrame.Position = UDim2.new(0.05, 0, 0.2, 0)
ScrollFrame.Size = UDim2.new(0.9, 0, 0.7, 0)
ScrollFrame.CanvasSize = UDim2.new(0, 0, 2, 0)
ScrollFrame.ScrollBarThickness = 6

-- Note Text
NoteText.Name = "NoteText"
NoteText.Parent = ScrollFrame
NoteText.BackgroundTransparency = 1
NoteText.Size = UDim2.new(1, -10, 1, 0)
NoteText.Position = UDim2.new(0, 5, 0, 0)
NoteText.Text = [[
Warning

Sorry You Can't Use Our Script Anymore
Because We Are Currently Doing A Big Update
Maybe It Will Be Finished Later
Sorry, And Please Be Patient Because This
Big Update Underway
Join Discord
https://discord.gg/5abAVqUJ5U
If You Want to Know When It Will Be Finished

]]
NoteText.TextColor3 = Color3.fromRGB(255, 230, 160)
NoteText.TextWrapped = true
NoteText.TextYAlignment = Enum.TextYAlignment.Top
NoteText.TextXAlignment = Enum.TextXAlignment.Left
NoteText.Font = Enum.Font.Gotham
NoteText.TextSize = 14

-- Close Button
CloseButton.Name = "CloseButton"
CloseButton.Parent = MainFrame
CloseButton.Text = "X"
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 16
CloseButton.TextColor3 = Color3.fromRGB(255, 200, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(50, 35, 20)
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.BorderSizePixel = 0

local closeCorner = Instance.new("UICorner", CloseButton)
closeCorner.CornerRadius = UDim.new(1, 0)

CloseButton.MouseButton1Click:Connect(function()
	MainFrame.Visible = false
end)

-- Drag
MainFrame.Active = true
MainFrame.Draggable = true
